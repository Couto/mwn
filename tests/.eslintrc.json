{
	"env": {
		"es2017": true,
		"mocha": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:chai-expect/recommended"],
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"plugins": ["chai-expect"],
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"prefer-const": "off"
	}
}
